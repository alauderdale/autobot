= form_for(:car, :url => {:action => 'create'}) do |f|
  .field
    = f.label 'make'
    %br
    = f.text_field :make
  .field
    = f.label 'model'
    %br
    = f.text_field :car_model
  .field
    = f.label 'year'
    %br
    = f.text_field :year
  .actions
    = f.submit :value => 'Create Car' , :class => 'button'

